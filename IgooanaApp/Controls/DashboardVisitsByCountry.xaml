<UserControl x:Class="IgooanaApp.Controls.DashboardVisitsByCountry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    BorderBrush="Gray" BorderThickness="2"
    d:DesignHeight="480" d:DesignWidth="480">


  <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="False">
    <Grid.RowDefinitions>
      <RowDefinition Height="100"/>
      <RowDefinition Height="100"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock HorizontalAlignment="Stretch" Height="auto" Margin="10" Padding="5" TextWrapping="Wrap" Text="Visits" VerticalAlignment="Top" FontSize="28" Foreground="Black" />
    <TextBlock HorizontalAlignment="Stretch" Height="auto" Margin="10" Padding="5" Grid.Row="1" Text="{Binding VisitsTotal}" TextWrapping="Wrap" Name="visitorsOverall" VerticalAlignment="Top" Width="460" FontSize="28" Foreground="Black"/>
    <StackPanel x:Name="visitorsPanel"  HorizontalAlignment="Stretch"  Margin="10" Grid.Row="2" VerticalAlignment="Stretch" >
      <ListBox ItemsSource="{Binding VisitsByCountry}" Foreground="Black">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}" HorizontalAlignment="Stretch" FontSize="28" Foreground="Black"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <TextBlock HorizontalAlignment="Stretch" Height="auto" Padding="5" Grid.Row="2" Text="{Binding CountriesOverall}" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="28" Foreground="Black" >
      </TextBlock>
    </StackPanel>

  </Grid>
</UserControl>